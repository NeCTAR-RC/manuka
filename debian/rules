#!/usr/bin/make -f

include /usr/share/openstack-pkg-tools/pkgos.make

%:
	dh $@ --buildsystem=python_distutils --with python3,systemd

override_dh_auto_clean:
	python3 setup.py clean

override_dh_clean:
	dh_clean
	find . -iname '*.pyc' -delete
	rm -f debian/*.init debian/*.service debian/*.upstart
	rm -rf build
	rm -rf manuka.sqlite
	rm -rf .eggs
	rm -f debian/manuka-api.postinst debian/manuka-api.config debian/manuka-common.postinst debian/manuka-common.config

override_dh_auto_build:
	set -e ; for i in $(PYTHON3S) ; do \
		python3 setup.py build --force ; \
	done

	/usr/share/openstack-pkg-tools/pkgos_insert_include pkgos_func manuka-common.postinst
	/usr/share/openstack-pkg-tools/pkgos_insert_include pkgos_postrm manuka-common.postrm

override_dh_auto_test:
ifeq (,$(findstring nocheck, $(DEB_BUILD_OPTIONS)))
	pkgos-dh_auto_test --no-py2 'manuka\.tests\.unit.*'
endif

override_dh_auto_install:
	echo "Do nothing here..."

override_dh_install:
	for i in $(PYTHON3S) ; do \
		python$$i setup.py install --root=debian/tmp --install-layout=deb ; \
	done

	# Generate the manuka.conf config using installed python-manuka files.
	mkdir -p $(CURDIR)/debian/manuka-common/usr/share/manuka-common
	PYTHONPATH=$(CURDIR)/debian/tmp/usr/lib/python3/dist-packages oslo-config-generator \
		--output-file $(CURDIR)/debian/manuka-common/usr/share/manuka-common/manuka.conf \
		--wrap-width 140 \
		--namespace manuka \
		--namespace oslo.log \
		--namespace oslo.messaging \
		--namespace oslo.middleware \
		--namespace oslo.policy \
		--namespace keystonemiddleware.auth_token

	# Same with policy.conf
	PYTHONPATH=$(CURDIR)/debian/tmp/usr/lib/python3/dist-packages oslopolicy-sample-generator \
		--output-file $(CURDIR)/debian/manuka-common/usr/share/manuka-common/policy.yaml \
		--format yaml \
		--namespace manuka

	rm -rf $(CURDIR)/debian/tmp/usr/etc
	find debian/tmp/  -type d -name __pycache__ -exec rm -r {} \+

	dh_install

#override_dh_sphinxdoc:
#ifeq (,$(findstring nodoc, $(DEB_BUILD_OPTIONS)))
#	python3 -m sphinx $(SPHINXOPTS) -b html doc/source $(CURDIR)/debian/manuka-doc/usr/share/doc/manuka-doc/html
#	dh_sphinxdoc -O--buildsystem=python_distutils
#endif

override_dh_missing:
	dh_missing --fail-missing

override_dh_python3:
	dh_python3 --shebang=/usr/bin/python3
